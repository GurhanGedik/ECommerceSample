@model ECommerce.Entity.Invoice
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_HomePage.cshtml";
}

@using (Html.BeginForm())
{

    <section class="section">
        <div class="container">
            <div class="row mt-0">
                <div class="col">
                    <form id="shopCheckout" action="#" method="post">
                        <div class="row mb-5">
                            <div class="col-md-12 mb-5 mb-md-0">
                                <h2 class="font-weight-bold mb-3">Billing Address</h2>

                                <div class="form-row">
                                    <div class="form-group col">
                                        <label class="text-color-dark font-weight-semibold" for="billing_address">ADDRESS:</label>
                                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control line-height-1 bg-light-5" })
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-4 mb-md-0">
                            </div>
                            <div class="col-md-6">

                                <h3 class="font-weight-bold text-4 mb-3">Payment</h3>
                                <div id="shopPayment">
                                    @Html.DropDownList("PaymentTypes", ViewBag.Skills as SelectList, new { @class = "form-control bg-light-5 text-color-dark border-0" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col text-right mt-3">
                                <button class="btn btn-primary btn-rounded font-weight-bold btn-h-2 btn-v-3" type="submit">PLACE ORDER</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
}


