@using ECommerce.Entity
@model Member


<div class="col-md-6 col-lg-7 col-xl-8 pt-3">
    <span class="title text-dark">NEW USER</span>
    <hr />
    @using (Html.BeginForm("AddUser", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-row">
            <div class="form-group col-lg-6">
                <label class="text-color-dark" for="shopLoginRegisterName">FİRST NAME:</label>
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control bg-light-5 border-0 rounded" } })
            </div>
            <div class="form-group col-lg-6">
                <label class="text-color-dark" for="shopLoginRegisterName">LAST NAME:</label>
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control bg-light-5 border-0 rounded" } })
            </div>
            
        </div>
        <div class="form-row">
            <div class="form-group col-lg-6">
                <label class="text-color-dark" for="shopLoginRegisterEmail">EMAIL ADDRESS:</label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control bg-light-5 border-0 rounded" } })
            </div>
            <div class="form-group col-lg-6">
                <label class="text-color-dark" for="shopLoginRegisterPassword">PASSWORD:</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control bg-light-5 border-0 rounded" } })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-lg-6">
                <label class="text-color-dark" for="shopLoginRegisterEmail">ADDRESS:</label>
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control bg-light-5 border-0 rounded" } })
            </div>
        </div>
        <div class="form-row">
            <div class="col text-right">
                <button type="submit" class="btn btn-primary btn-rounded btn-v-3 btn-h-3 font-weight-bold">REGISTER NOW</button>
            </div>
        </div>
    }
</div>