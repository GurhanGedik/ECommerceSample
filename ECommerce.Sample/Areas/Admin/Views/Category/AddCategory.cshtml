@using ECommerce.Entity
@model Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPage.cshtml";
}

<header class="page-header">
    <h2>Add Category</h2>
</header>
<!-- Modal Form -->

<section class="card">
    <header class="card-header">
        <h2 class="card-title">Add Category</h2>
    </header>
    @using (Html.BeginForm()) { 
    <div class="card-body">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="inputEmail4">Category Name</label>
                <input type="text" class="form-control" name="CategoryName" id="inputEmail4" placeholder="Category Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Description</label>
            <textarea rows="5" type="text" name="Description" class="form-control" id="inputAddress" placeholder="Description"></textarea>
        </div>
    </div>
    <footer class="card-footer">
        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn-primary" type="submit">Add</button>
                @Html.ActionLink("Cancel", "List", new { @class = "btn btn-default" })
            </div>
        </div>
    </footer>
    }
</section>

